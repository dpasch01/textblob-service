#!/usr/bin/python

from flask import Flask
from textblob import TextBlob
app = Flask(__name__)

from signal import *

@app.route("/sentiment")
def sentiment():
	text = request.args.get('text').strip().encode('utf-8', "ignore")
	blob = TextBlob(text)
	
	return ("".testimonial.sentiment).encode('utf8')

if __name__ == "__main__":
    app.run(host='0.0.0.0', port=8593)


